<html>

<head>
    <title>SignIn</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }

        .b {
            background-color: rgb(66, 65, 65);
            color: white;
            border-radius: 20px;
            padding: 10px;
            width: 100px;
            margin: 15px;
            cursor: pointer;
        }

        .reg {
            height: 100%;
            width: 100%;
            background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url(https://images5.alphacoders.com/958/thumb-1920-958461.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            position: absolute;
        }

        .form-box {
            border-radius: 12%;
            width: 380px;
            height: 480px;
            position: relative;
            margin: 6% auto;
            background: #FDE49C;
            padding: 5px;
            overflow: hidden;
        }

        .button-box {
            width: 220px;
            margin: 35px auto;
            position: relative;
            box-shadow: 0 0 20px 9px #3324ff1f;
            border-radius: 30px;
        }

        .toggle-btn {
            padding: 10px 30px;
            cursor: pointer;
            background: transparent;
            border: 0;
            outline: none;
            position: relative;
            color: rgb(94, 87, 87);
        }

        #btn {
            top: 0;
            left: 0;
            position: absolute;
            width: 110px;
            height: 100%;
            background: rgb(66, 65, 65);
            border-radius: 30px;
            transition: .5s;
            color: white;
        }

        .lst {
            text-align: center;
            width: 100%;
            margin-top: 10px;
        }

        .input-group {
            top: 180px;
            position: absolute;
            width: 280px;
            transition: .5s;
        }

        .input-field {
            width: 100%;
            padding: 10px 0;
            margin: 5px 0;
            border-left: 0;
            border-top: 0;
            border-right: 0;
            border-bottom: 1px solid #999;
            outline: none;
            background: transparent;
        }

        .submit-btn {
            width: 85%;
            padding: 10px 30px;
            cursor: pointer;
            display: block;
            margin: auto;
            background: #574ddd;
            border: 0;
            outline: none;
            border-radius: 30px;
            background-color: rgb(66, 65, 65);
            color: white;
        }

        #login {
            left: 50px;
        }

        #register {
            left: 450px;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/e933e31ff8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/e933e31ff8.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>

<body>
    <div class="reg">
        <div class="back">
            <form action="/" method="get">
                <button type="submit" class="btn btn-primary b"><strong>Back</strong></button>
            </form>
        </div>
        <div class="form-box">
            <div class="button-box">
                <div id="btn"></div>
                <button type="button" class="toggle-btn" onclick="login()">Log In</button>
                <button type="button" class="toggle-btn" onclick="register()">Register</button>
            </div>
            <form id="login" class="input-group" action="/login" method="POST">
                <input type="email" class="input-field" placeholder="Email ID" name="username" required>
                <input type="password" class="input-field" placeholder="Enter Password" name="password"
                    required><br><br>
                <button type="submit" class="submit-btn">Log in</button><br><br>



            </form>
            <form id="register" class="input-group" action="/register" method="POST">
                <!-- <input type="text" class="input-field" placeholder="User Name"  required> -->
                <input type="email" class="input-field" placeholder="Email ID" name="username" required>
                <input type="password" class="input-field" placeholder="Enter Password" name="password"
                    required><br><br>
                <button type="submit" class="submit-btn">Register</button><br><br>
                <hr style="color: black; border-color: black; border-top: solid;">
                <div class="col-sm-4 lst">
                    <a class="btn btn-social btn-google" href="/auth/google" role="button" style="color: #DD4B39;">
                        <i class="fab fa-google fa-2x"></i>

                    </a>

                </div>
                <div class="lst">
                    <h6>Sign with Google</h6>
                </div>

            </form>
        </div>
    </div>

    <script>
        var x = document.getElementById("login");
        var y = document.getElementById("register");
        var z = document.getElementById("btn");

        function register() {
            x.style.left = "-400px";
            y.style.left = "50px";
            z.style.left = "110px";
        }
        function login() {
            x.style.left = "50px";
            y.style.left = "450px";
            z.style.left = "0";
        }

    </script>

</body>

</html>

